{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-3">Recettes</h1>
    {{ form_start(form) }}
    <div class="recipe-search col-xs-8 offset-sm-2 col-sm-6 offset-sm-3 col-md-4 offset-md-4 d-flex flex-column align-items-center p-3">
        <div class="row mt-2">
            {{ form_row(form.category) }}
        </div>
        <div class="row mt-2">
            {{ form_row(form.recipe) }}
        </div>
        <div class="row mt-2">
            <button class="btn btn-success">Rechercher</button>
        </div>
    </div>
    {{ form_end(form) }}

    <form action="{{ path('search') }}" method="get" class="d-flex col-md-6 offset-md-3">
        <label for="search-query"></label>
        <input type="text" name="search-query" class="form-control">
        <button type="submit">Rechercher</button>
    </form>

    <a href="{{ path('recipe_starter') }}">Entr√©e</a>

    <div class="container recipe-container mt-3">
        {% for recipe in recipes %}
            <div class="col-xs-4 col-sm-6 col-md-4 card-recipe flex-wrap">
                {% include 'recipe/card.html.twig' with {'recipe' : recipe} only %}
            </div>
        {% endfor %}
    </div>

    <div class="pagination offset-md-5 mt-5">
        {{ knp_pagination_render(recipes) }}
    </div>

{% endblock %}
