{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Recettes</h1>
    <div class="container recipe-container">
        <div class="card">
            <div class="card-header">
                <h2 class="panel-title text-center">Rechercher un livre</h2>
            </div>
            <div class="card-body">
                <form class="form-inline flex-row justify-content-center">
                    <div class="form-group mr-sm-2">
                        <label class="sr-only" for="inputTitle">Titre</label>
                        <input type="text" class="form-control" id="inputTitle" placeholder="Titre">
                    </div>
                    <div class="form-group mr-sm-2">
                        <label class="sr-only" for="selectCategory">Email</label>
                        <select class="form-control" id="selectCategory">
                            <option disabled selected>Toutes les cat√©gories</option>
                            {% for recipe in recipes %}
                                <option>{{ recipe.category }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-search"></i>
                        Rechercher
                    </button>
                </form>
            </div>
        </div>

        {% for recipe in recipes %}
            <div class="col-xs-4 col-sm-8 col-md-4 card-recipe flex-wrap">
                {% include 'recipe/card.html.twig' with {'recipe' : recipe} only %}
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('recipe_new') }}">Create new</a>
{% endblock %}
